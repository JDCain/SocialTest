@model SocialTest.Models.LoginInfo
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="">
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="col-lg-5 col-sm-12">          
            <div class="form-group required">
                <div>
                    @Html.LabelFor(model => model.User, "Name")
                </div>
                <div>
                    @Html.EditorFor(model => model.User, new { htmlAttributes = new { @aria_required = "true", @class = "form-control" } })
                    <div>
                        @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group required">
                <div>
                    @Html.LabelFor(model => model.Password, "Password")
                </div>
                <div>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="">
                    <button type="submit" class="btn">Submit</button>
                </div>
            </div>
        </div>
    }
</div>

